<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<form method="GET" action="/books"> nombre receta <input type="text" name="filter"/>
<input type="submit"/>
  </form>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Featured</th>
      <th>Ingredients</th>
      <th>Steps</th>
      
      <th> <%= link_to "date ", recipes_path(:sort => true, :by => "date", :order => (params[:order] == "asc" ? "desc" : "asc"))%>
      </th>

      <th>Image url</th>
      <th>Category</th>
      <th>Author</th>
      <th>Recipe type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %> - <%= recipe.category.name unless recipe.category.nil? %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.featured %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.steps %></td>
        <td><%= recipe.submit_date %></td>
        <td><%= recipe.image_url %></td>
        <td><%= recipe.category.name unless recipe.category.nil? %></td>
        <td><%= recipe.author.name unless recipe.author.nil? %></td>
        <td><%= recipe.recipe_type.name unless recipe.recipe_type.nil? %></td>

        
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

